# Application Settings
APP_NAME="Veda Foundation â€” Bhakti Charu Swami Archives"
APP_ENV=dev  # dev or prod
DEBUG=True
SECRET_KEY=your-secret-key-here  # Generate with: openssl rand -hex 32

# Database Configuration
# For SQLite (development)
DATABASE_URL=sqlite+aiosqlite:///./local.db
# For PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/veda_archives

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://localhost:6379/0

# Storage Configuration
STORAGE_TYPE=local  # local or s3
LOCAL_STORAGE_PATH=./storage

# S3 Storage (required if STORAGE_TYPE=s3)
S3_ENDPOINT_URL=https://your-s3-endpoint.com
S3_REGION=us-east-1
S3_BUCKET=veda-archives
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your-email-password
SMTP_FROM="Veda Foundation <noreply@vedafoundation.org>"
SMTP_TLS=True
SMTP_SSL=False

# Admin User (auto-created on first run if no users exist)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret  # Generate with: openssl rand -hex 32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT=100  # requests per minute

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# Sentry Configuration (optional)
# SENTRY_DSN=your-sentry-dsn
# ENVIRONMENT=production
